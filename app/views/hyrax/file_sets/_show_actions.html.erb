<div class="form-actions">
  <% if ( ( @presenter.editor? && @presenter.parent.workflow.state != "deposited" ) ||  current_ability.admin? ) %>
    <%= link_to t('simple_form.actions.file_set.edit'), edit_polymorphic_path([main_app, @presenter]),
                class: 'btn btn-primary' %>
    <% unless ( @presenter.parent_doi_minted? || @presenter.doi_minted? ) %>
      <%= link_to t('simple_form.actions.file_set.delete'), [main_app, @presenter],
                  class: 'btn btn-danger', data: { confirm: "Delete this #{@presenter.human_readable_type}?" },
                  method: :delete %>
    <% end %>
  <% end %>

  <%#= render 'social_media' %>

  <% if Hyrax.config.analytics? %>
    <div class="panel panel-default panel-analytics">
      <div class="panel-heading">
        <h2><%= t('simple_form.labels.file_set.analytics') %></h2>
      </div>
      <div class="panel-body">
        <%= link_to t('simple_form.actions.file_set.analytics'),
                    @presenter.relative_url_root + @presenter.stats_path,
                    id: 'stats',
                    class: 'btn btn-default',
                    data: {turbolinks: false} %>
      </div>
    </div>
  <% end %>

  <% if @presenter.current_ability.admin? %>
    <div class="panel panel-default panel-admin">
      <div class="panel-heading">
        <h2><%= t('simple_form.labels.file_set.admin_actions') %></h2>
      </div>
      <div class="panel-body">
        <% if @presenter.doi_minting_enabled? && !@presenter.doi_pending? && !@presenter.doi_minted? %>
          <p>
            <button class="btn btn-primary" data-target="#mintDoiId" data-toggle="modal">
              <%= t('simple_form.actions.file_set.mint_doi') %>
            </button>
          </p>
        <% end %>
        <% if @presenter.display_file_contents_allowed? %>
          <p>
          <%= link_to t('simple_form.actions.file_set.contents'),
                      main_app.file_contents_hyrax_file_set_path(@presenter.id), class: 'btn btn-subtle' %>
          </p>
        <% end %>
        <% if @presenter.display_provenance_log_enabled? %>
          <p>
          <%= link_to t('simple_form.actions.provenance_log.display'),
                      main_app.display_provenance_log_hyrax_file_set_path(@presenter.id), class: 'btn btn-subtle' %>
          </p>
        <% end %>
      </div>
    </div> <!-- End Admin panel -->
  <% end %>

</div>
<%= render 'modal_mint_doi', id: @presenter.id %>